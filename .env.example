# ============================================
# SUPABASE (Database + Auth)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Database URLs
DATABASE_URL="postgresql://postgres.xxx:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.xxx:[PASSWORD]@aws-0-us-east-1.compute.amazonaws.com:5432/postgres"

# Auth Keys
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# REDIS (Upstash)
# ============================================
# Get from: https://console.upstash.com/redis
REDIS_URL="rediss://default:[PASSWORD]@your-redis.upstash.io:6379"

# ============================================
# CLOUDFLARE R2 (Storage)
# ============================================
# Get from: https://dash.cloudflare.com/r2
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_BUCKET_NAME="postplex-videos"
R2_PUBLIC_URL="https://pub-xxxxx.r2.dev"

# ============================================
# SCRAPE CREATOR (Social Media Scraping)
# ============================================
SCRAPE_CREATOR_API_KEY="your-api-key"
SCRAPE_CREATOR_API_URL="https://api.scrapecreators.com/v1"

# ============================================
# AYRSHARE (Social Media Posting) - Optional
# ============================================
AYRSHARE_API_KEY="your-ayrshare-api-key"

# ============================================
# STRIPE (Payments) - Optional for Stage 3+
# ============================================
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"
